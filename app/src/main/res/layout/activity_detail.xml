<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cont_colored_background"
        android:layout_above="@+id/div_center"/>

    <TextView
        style="@style/Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_date_and_time_header"
        tools:text="12:00AM 11/02/2018"
        android:layout_above="@+id/div_center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/div_center"
        android:layout_centerVertical="true"/>

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/lbl_message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_center"
        tools:text="Lorem ipsum dolor sit amet, id justo similique duo, qui no fabulas impedit consetetur. Vocent insolens deserunt cu ius, vocibus antiopam intellegebat no has. No habeo nullam quidam nec, graeco malorum electram ei quo. Stet dicam persius et qui. Ne per feugait expetenda adolescens, malorum vocibus cum ne. No quot dicunt qui. Diam eirmod insolens an nam, ad error cotidieque nam."/>

</RelativeLayout>